{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mb-4">Connection</h1>
    <div class="row justify-content-center align-items-center mx-0 mb-5 w-100">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <div class="card border-primary">
                <img src="{{ asset('images/futurolan.png') }}" class="card-img-top px-4 pt-4" alt="Logo FuturoLAN">
                <div class="card-body">
                    <p class="card-text">Connectez-vous avec votre compte Google Apps (FuturoLAN ou ESL).</p>
                    <div class="text-center mt-4">
                        <a class="btn btn-primary" href="{{ path('connect_google_start') }}" role="button">
                            <h2 class="mb-0">
                                <i class="fab fa-google"></i>
                                Connection
                            </h2>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}